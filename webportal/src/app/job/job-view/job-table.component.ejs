<table id="job-table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Job Name</th>
      <th>User Name</th>
      <th>Start Time</th>
      <th>Duration</th>
      <th>Retries</th>
      <th>Status</th>
      <!-- TODO: Change this caption to 'Cancel' or 'Stop' in the future. -->
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <%
    for (let i = 0; i < jobs.length; i ++) {
  %>
      <tr>
        <td><a href="view.html?jobName=<%= jobs[i].name %>"><%= jobs[i].name %></a></td>
        <td><%= jobs[i].username %></td>
        <td>
          <span title="<%= Math.round(jobs[i].createdTime / 1000) %>"/>
          <%= convertTime(false, jobs[i].createdTime) %>
        </td>
        <td style='text-align:right'>
          <span title="<%= getDurationInSeconds(jobs[i].createdTime, jobs[i].completedTime) %>"/>
          <%= convertTime(true, jobs[i].createdTime, jobs[i].completedTime) %>
        </td>
        <td style='text-align:right'><%= jobs[i].retries %></td>
        <td><%= convertState(jobs[i].state) %></td>
        <!-- TODO: Change this button to 'Cancel' or 'Stop' in the future. -->
        <td><button class="btn btn-default btn-sm" onclick="deleteJob('<%= jobs[i].name %>')">Delete</button></td>
      </tr>
<%
    }
%>
  </tbody>
</table>